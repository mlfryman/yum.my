.row
  .col-xs-3
    form.form-horizontal(novalidate, role='form', name='userForm')
      fieldset
        #legend
          legend Register
        .form-group
          label.control-label(for='email') E-mail
          .controls
            input.form-control#email(type='email', name='email', ng-model='user.email', required, ng-minlength='4', autofocus)
            p.help-block Please provide your E-mail
        .form-group
          label.control-label(for='password') Password
          .controls
            input.form-control#password(type='password', name='password', ng-model='user.password', required)
            p.help-block Password should be at least 4 characters
        .form-group
            button.btn.btn-success(ng-show='userForm.$valid', ng-click='register()') Register

